# Source information
SRC=("https://download.gnome.org/sources/gtk/${_MAJOR_VERSION}/gtk-${VERSION}.tar.xz")

SUM_TYPE="sha512"
SUM=("ae1c30b99bf28dcf45a6183c20f44f1facfc701d43bf77727c7f38880922026beef9f651a4fd9c9464b1dcd5238274738bad3a789225147d9449e4b2fc0cb171")

# Prepare script
function prepare() {
    cd "${WORKDIR}/gtk-${VERSION}"

    mkdir build
    cd    build

    meson --prefix=/usr             \
          --buildtype=release       \
          -Dbroadway-backend=true   \
          -Dtracker=enabled         \
          -Dcolord=enabled          \
          -Dvulkan=enabled          \
          -Ddocumentation=false     \
	  -Dintrospection=enabled   \
          -Dwayland-backend=true    \
          --libdir=/usr/lib         \
          ..

    return 0
}

# Build script
function build() {
    cd "${WORKDIR}/gtk-${VERSION}/build"

    ninja

    if [ "$WAYLAND_DISPLAY" != "" ]; then
        meson test --setup wayland
    elif [ "$DISPLAY" != "" ]; then
        meson test --setup x11
    fi

    return 0
}

# Post build script
function postbuild() {
    cd "${WORKDIR}/gtk-${VERSION}/build"

    DESTDIR="${BUILD_DATA_ROOT}" ninja install

    return 0
}
