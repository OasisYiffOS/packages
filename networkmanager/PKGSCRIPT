LICENSES=("LGPL-2.1")
DEPENDS=("jansson" "libndp" "curl" "dhclient" "iptables" "newt" "wpa_supplicant" "gnutls" "systemd" "nss" "gobject-introspection" "python-pycairo" "python-pygobject" "polkit" "modemmanager" "libpsl")
OPT_DEPENDS=()
