# Source information
SRC=("https://download.gnome.org/sources/NetworkManager/${_MAJOR_VERSION}/NetworkManager-${VERSION}.tar.xz")

SUM_TYPE="sha512"
SUM=("8648b392ed2b8a20fdf08dea3bb2b1125f074eb4a8b17b7d71d2b087d8266d1d5a2700cfa67d58f2f7e573bdfb2792c128f30785e14a07b75e907e3f998c9e8b")

# Prepare script
function prepare() {
    cd "${WORKDIR}/NetworkManager-${VERSION}"

    # Fix the Python scripts so they use Python 3
    grep -rl '^#!.*python$' | xargs sed -i '1s/python/&3/'

    mkdir build
    cd    build

    CXXFLAGS+="-O2 -fPIC"               \
    meson --prefix=/usr                 \
          --buildtype=release           \
          -Dlibaudit=no                 \
          -Dlibpsl=true                 \
          -Dnmtui=true                  \
          -Dovs=false                   \
          -Dppp=false                   \
          -Dselinux=false               \
          -Dqt=false                    \
          -Dsession_tracking=systemd    \
          -Dmodem_manager=true          \
          -Dtests=no                    \
          -Dpolkit=true                 \
          ..

    return 0
}

# Build script
function build() {
    cd "${WORKDIR}/NetworkManager-${VERSION}/build"

    ninja

    return 0
}

# Post build script
function postbuild() {
    cd "${WORKDIR}/NetworkManager-${VERSION}/build"

    DESTDIR="${BUILD_DATA_ROOT}" ninja install

    mv -v ${BUILD_DATA_ROOT}/usr/share/doc/NetworkManager{,-${VERSION}}

    mkdir -pv ${BUILD_DATA_ROOT}/etc/NetworkManager/
cat >> ${BUILD_DATA_ROOT}/etc/NetworkManager/NetworkManager.conf << "EOF"
# DO NOT EDIT THIS FILE, EDIT FILES IN /etc/NetworkManager/conf.d/

[main]
plugins=keyfile
EOF

    return 0
}
