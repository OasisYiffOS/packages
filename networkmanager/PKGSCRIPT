SUM=("17b2d39ed2584fb8b805e7b9950f9c4e6d657380881e9e78a1aa85dc58615e0a3896413a6902086f516dee2f373155f69042b4a229f3b9e15fb3c0f958cd8149")

# Prepare script
function prepare() {
    cd "${WORKDIR}/NetworkManager-${VERSION}"

    # Fix the Python scripts so they use Python 3
    grep -rl '^#!.*python$' | xargs sed -i '1s/python/&3/'

    mkdir build
    cd    build

    CXXFLAGS+="-O2 -fPIC"               \
    meson --prefix=/usr                 \
          --buildtype=release           \
          -Dlibaudit=no                 \
          -Dlibpsl=false                \
          -Dnmtui=true                  \
          -Dovs=false                   \
          -Dppp=false                   \
          -Dselinux=false               \
          -Dqt=false                    \
          -Dsession_tracking=systemd    \
          -Dmodem_manager=false         \
          -Dtests=no                    \
          -Dpolkit=false                \
          ..

    return 0
}

# Build script
function build() {
    cd "${WORKDIR}/NetworkManager-${VERSION}/build"

    ninja

    return 0
}

# Post build script
function postbuild() {
    cd "${WORKDIR}/NetworkManager-${VERSION}/build"

    DESTDIR="${BUILD_DATA_ROOT}" ninja install

    mv -v ${BUILD_DATA_ROOT}/usr/share/doc/NetworkManager{,-${VERSION}}

    mkdir -pv ${BUILD_DATA_ROOT}/etc/NetworkManager/
cat >> ${BUILD_DATA_ROOT}/etc/NetworkManager/NetworkManager.conf << "EOF"
# DO NOT EDIT THIS FILE, EDIT FILES IN /etc/NetworkManager/conf.d/

[main]
plugins=keyfile
EOF

    return 0
}