# Prepare script
function prepare() {
    cd "${WORKDIR}/neofetch-${VERSION}"

    # Add yiffOS logo patch
    patch -Np1 < "${WORKDIR}/include-yiffos.patch"

    return 0
}

# Build script
function build() {
    return 0
}

# Post build script
function postbuild() {
    cd "${WORKDIR}/neofetch-${VERSION}"

    DESTDIR="${BUILD_DATA_ROOT}" make install

    return 0
}